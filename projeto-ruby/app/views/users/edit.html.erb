<h1>Editing User</h1>

<%= form_for :user, url: user_path(@user), method: :patch do |f| %>

<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2>
    </h2>
    <ul>
      <%@user.errors.full_messages.each do |msg| %>
      <li><%=msg%></li>
      <%end%>
    </ul>
    </div>
<%end%>
  
<p>
<%= f.label:title %><br>
<%= f.text_field :title%>
</p>

<p>
<%= f.label :author%><br>
<%= f.text_field :author%>
</p>

<p>
<%=f.submit%>
</p>

<% end %>

<%= link_to 'Back', users_path %>